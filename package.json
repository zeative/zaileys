{
  "name": "zaileys",
  "version": "1.1.34",
  "description": "Zaileys - Simplified WhatsApp Node.js API",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "keywords": [
    "zaileys",
    "whatsapp",
    "wa-simplify",
    "bot-zaileys",
    "js-whatsapp",
    "whatsapp-chat",
    "whatsapp-api",
    "whatsapp-web",
    "whatsapp-group",
    "automation",
    "multi-device"
  ],
  "license": "MIT",
  "homepage": "https://github.com/zeative/zaileys",
  "funding": "https://saweria.co/zaadevofc",
  "repository": {
    "url": "git+ssh://git@github.com/zeative/zaileys.git"
  },
  "bugs": {
    "url": "https://github.com/zeative/zaileys/issues"
  },
  "author": {
    "name": "zaadevofc",
    "email": "zaadevofc@gmail.com",
    "url": "https://github.com/zeative"
  },
  "scripts": {
    "build": "tsup",
    "build:mem": "node --max-old-space-size=4096 node_modules/tsup/dist/cli-default.js",
    "build:split": "tsup --config tsup.config.js",
    "build:script": "node scripts/build.js",
    "dev": "tsx watch examples/test.ts",
    "clean": "rm -rf dist sessions",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "lint": "npx tsc --noEmit",
    "lint:fix": "eslint src/ --ext .ts --fix"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "audio-decode": "^2.2.3",
    "baileys": "github:zeative/zproto",
    "chalk": "^4.1.2",
    "figlet": "1.8.1",
    "jimp": "^1.6.0",
    "lodash": "^4.17.21",
    "lowdb": "1.0.0",
    "nanospinner": "^1.2.2",
    "node-cache": "^5.1.2",
    "pino": "^9.7.0",
    "qrcode": "^1.5.4",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/lodash": "^4.17.20",
    "@types/lowdb": "^1.0.9",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.34.0",
    "terser": "^5.43.1",
    "tsup": "^8.5.0",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.43.0"
  },
  "trustedDependencies": [
    "baileys",
    "protobufjs"
  ]
}
